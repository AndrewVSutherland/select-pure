{
  "name": "npm-boilerplate-package",
  "version": "1.0.1",
  "description": "Boilerplate for Babel-Rollup-Jest NPM package.",
  "author": {
    "name": "Maksym Dudynskyi",
    "email": "maksymddd@gmail.com",
    "url": "https://github.com/maksymddd"
  },
  "keywords": [
    "npm",
    "boilerplate",
    "package",
    "module",
    "babel",
    "rollup",
    "jest",
    "es6",
    "es7",
    "eslint"
  ],
  "main": "lib/bundle.min.js",
  "scripts": {
    "build": "rollup -c",
    "test": "jest --no-cache --coverage",
    "lint:js": "./node_modules/eslint/bin/eslint.js src/",
    "lint:tests": "./node_modules/eslint/bin/eslint.js tests/",
    "lint:all": "npm run lint:js && npm run lint:tests"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/maksymddd/npm-boilerplate-package.git"
  },
  "babel": {
    "presets": [
      [
        "latest",
        {
          "es2015": {
            "modules": false
          }
        }
      ],
      [
        "env",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread"
    ],
    "env": {
      "test": {
        "presets": [
          [
            "env",
            {
              "modules": "commonjs"
            }
          ],
          "jest"
        ]
      }
    }
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "pre-commit": [
    "lint:all",
    "test",
    "build"
  ],
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^22.4.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-latest": "^6.24.1",
    "rollup": "^0.58.2",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-uglify": "^3.0.0"
  }
}
